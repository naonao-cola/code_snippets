#settings_contents QScrollArea .QWidget .QWidget {
    border-bottom: 1px solid #ddd;
}
#settings_contents QWidget QLabel {
    padding: 5px 0; 
}
#settings_contents QPushButton, 
#settings_contents QComboBox, 
#settings_contents QLineEdit {
    border: 1px solid #aaa;
    border-radius: 3px;
    background-color: transparent;
}
#settings_contents QComboBox {
    padding: 4px 0 4px 11px;
}
#settings_contents QPushButton {
    padding: 5px 9px;
}
#settings_contents QLineEdit {
    padding: 4px 5px;
}
#settings_contents QPushButton:hover, 
#settings_contents QComboBox:hover,
#settings_contents QLineEdit:hover {
    border: 1px solid #777;
}
#settings_contents QLineEdit:focus {
    border-width: 2px;
}
#settings_contents QCheckBox {
    height: 20px;
    width: 0;
    padding: 0;
    border: 1px solid #aaa;
    border-radius: 10px;
}
#settings_contents QCheckBox:hover {
    border: 1px solid #777;
}
#settings_contents QCheckBox:checked {
    border: none;
    background-color: #2080f0 !important;
}
#settings_contents QCheckBox::indicator {
    height: 10px;
    width: 10px;
    margin-left: 5px;
    margin-right: 20px;
    border: none;
    border-radius: 5px;
    background-color: #434343;
}
#settings_contents QCheckBox::indicator:checked {
    margin-left: 25px;
    margin-right: 0;
    background-color: #f5f6f6;
}

/*系统托盘菜单*/
#menu_widget QLabel {
    font-size: 14px;
    padding-top: 5px;
}

/*音量控制*/
#volume_bar::handle:!enabled {
    background-color: #aaa;
}
#volume_bar::add-page:!enabled {
    background-color: #aaa;
}
#volume_bar::groove:!enabled {
    background-color: transparent;
}
#volume_bar::groove {
    width: 2px;
}
#volume_bar::handle { 
    height: 8px;
    margin: 0 -8px;
}
#volume_bar::sub-page {
    background-color: #b9b9b9;
}
#volume_bar::add-page {
    background-color: #2080f0;
}
#volume_lab {
    color: #333;
    font-size: 12px;
    text-align: center;
}